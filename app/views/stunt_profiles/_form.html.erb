    <%= f.input :unpaid_work, collection: yes_no %>
    <%= f.input :authorized_to_work, collection: yes_no %>
    <%= f.input :primary_citizenship do %>
        <%= f.country_select :primary_citizenship, {object: f.object, prompt: '-- Please Select --'} %>
    <% end %>
    <%= f.input :valid_passport, collection: yes_no %>

    <%= f.input :post_job_titles, input_html: {rows: 5} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
